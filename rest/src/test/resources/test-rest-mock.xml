<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.springframework.org/schema/beans"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="org.mockito.Mockito" factory-method="mock" id="mockDepartmentService">
    <constructor-arg value="com.nikolay.service.impl.DepartmentServiceImpl"/>
  </bean>

  <bean class="org.mockito.Mockito" factory-method="mock" id="mockEmployeeService">
    <constructor-arg value="com.nikolay.service.impl.EmployeeServiceImpl"/>
  </bean>

  <bean class="com.nikolay.utility.validate.EmployeeValidator" id="employeeValidator"/>

  <bean class="com.nikolay.utility.validate.DepartmentValidator" id="departmentValidator"/>

</beans>