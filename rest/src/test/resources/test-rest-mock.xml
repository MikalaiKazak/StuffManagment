       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="departmentService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.nikolay.DepartmentService"/>
    </bean>

    <bean id="employeeService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.nikolay.EmployeeService"/>
    </bean>

</beans>